@using Utils
@model BusinessObject.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout_NoFooter.cshtml";
}

<link rel="stylesheet" href="~/css/register.css" />
<script src="https://kit.fontawesome.com/a81368914c.js"></script>
<div class="login-page">
    <div class="login-section">
        <div class="login-form">
            <div class="right-section">
                <img src="~/images/Hope.png" />
                <form method="post" asp-action="Register">
                    <div class="input-group">
                        <input asp-for="Email" placeholder="Email" class="input" type="text" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="FirstName" placeholder="First Name" class="input" type="text" required />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="LastName" placeholder="Last Name" class="input" type="text" required />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Phone" placeholder="Phone" class="input" type="text" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Address" placeholder="Address" class="input" type="text" required />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <input TYPE="password" placeholder="Password" asp-for="Password" class="" required />
                    </div>
                    <div>
                        <input type="submit" value="REGISTER" class="btn btn-blue btn-fill" id="btn-login" />
                    </div>
                </form>
            </div>
            <div id="panel">
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <script>
        function registered(result) {
            var returnUrl = jQuery.parseJSON(result.responseText).url;
            console.log(result.responseText.url);
            if (returnUrl) {
                window.location.href = returnUrl;
            }
        };
    </script>
}


